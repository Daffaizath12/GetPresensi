<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PresensiActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/purple"
        app:titleTextColor="@android:color/white" />

    <ImageView
        android:id="@+id/presensi_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="19dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/back"
        android:background="@drawable/circle_background" />

    <TextView
        android:id="@+id/textViewProfileTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Presensi"
        android:textSize="24sp"
        android:textStyle="bold"
        android:padding="16dp"
        android:layout_alignParentTop="true"
        android:gravity="center"/>

    <TextView
        android:id="@+id/textViewPresensiStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Telah Melakukan Presensi"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_below="@id/textViewProfileTitle"
        android:layout_marginBottom="16dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textViewUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:layout_below="@id/textViewPresensiStatus"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:layout_below="@id/textViewUsername"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="16sp"
        android:layout_below="@id/textViewLocation"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="8dp"/>

    <Button
        android:id="@+id/buttonCekRiwayatPresensi"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:layout_marginTop="30dp"
        android:backgroundTint="@color/purple"
        android:layout_below="@id/textViewDateTime"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Riwayat Presensi"
        android:textSize="18sp"
        app:cornerRadius="20dp"/>

</RelativeLayout>
